            <TextBox x:Name="ans3" Text="{Binding Path=ans3, UpdateSourceTrigger=PropertyChanged}" FontSize="14"/>-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <!--submit and cancel buttons-->
                <Button Content="Cancel" Width="100" Height="30" Margin="10,0" Background="Transparent" FontWeight="Bold" Click="CancelButton_Click"/>
                <Button Content="Submit" Width="100" Height="30" Background="Blue" FontWeight="Bold" Click="SubmitButton_Click"/>
            </StackPanel>
            </StackPanel>
    </Grid>
</Window>
