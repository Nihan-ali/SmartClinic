            <TextBox x:Name="qs2" Text="{Binding Path=qus2, UpdateSourceTrigger=PropertyChanged}" FontSize="12" FontWeight="Bold" Margin="5" BorderBrush="{x:Null}" Padding="5"/>
            <TextBox x:Name="ans2" Text="{Binding Path=ans2, UpdateSourceTrigger=PropertyChanged}" FontSize="12" FontWeight="Bold" Margin="5" BorderBrush="{x:Null}" Padding="5"/>
