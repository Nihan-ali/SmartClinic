            <TextBox x:Name="qs2" Text="{Binding Path=qus2, UpdateSourceTrigger=PropertyChanged}" FontSize="14"/>
            <TextBox x:Name="ans2" Text="{Binding Path=ans2, UpdateSourceTrigger=PropertyChanged}" FontSize="14"/>
            <Label>Question 3</Label>
