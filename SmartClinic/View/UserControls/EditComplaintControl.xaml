<UserControl x:Class="YourNamespace.EditComplaintControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid Background="Red">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="complaintContentTextBox" Text="{Binding Content, Mode=TwoWay}" Margin="10,0,10,10" Grid.Column="0"/>
        <TextBox x:Name="noteTextBox" Text="{Binding Note, Mode=TwoWay}" Margin="10,0,10,10" Grid.Column="1"/>
    </Grid>
</UserControl>
