<UserControl x:Class="SmartClinic.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartClinic.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Fill="#FF332646"/>
        <StackPanel>
            <Button Name="rx" Margin="15,15" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="../../rx.png" Height="20" Width="20"/>
            </Button>
            <Button Name="patients" Margin="15,15" Background="{x:Null}" BorderBrush="{x:Null}" Click="PatientButton_click">
                <Image Source="../../patient.png" Height="20" Width="20"/>
            </Button>
            <Button Name="settings" Margin="15,15" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="../../settings.png" Height="20" Width="20"/>
            </Button>
            <Button Name="stat" Margin="15,15" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="../../stat.png" Height="20" Width="20"/>
            </Button>
        </StackPanel>

    </Grid>
</UserControl>
