<UserControl x:Class="SmartClinic.View.UserControls.PatientProfileUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">

    <Grid Background="#F3F3F3">
        <!-- Add your UI elements here to display patient profile information -->

        <!-- Add more as needed -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>

        <!-- First Column: Sub-columns -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Add your controls in the sub-columns of the first column here -->
            <!-- Example: -->
            <Border Grid.Row="0" Background="#3498DB" Margin="5,5,0,5" BorderBrush="BlanchedAlmond">
                <!-- Content for the first sub-column -->
                <TextBlock x:Name="PatientNameTextBlock" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

            <Border Background="#3498DB" Margin="5,45,0,0" Height="25" VerticalAlignment="Top" Grid.RowSpan="2" BorderBrush="BlanchedAlmond">
                <!-- Content for the second sub-column -->
                <TextBlock x:Name="IDTextBlock" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

            <Border Grid.Row="1" Background="#3498DB" Margin="5,20,0,5" Grid.RowSpan="2" BorderBrush="BlanchedAlmond">
                <!-- Content for the third sub-column -->
                <TextBlock x:Name="AgeTextBlock" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

            <Border Grid.Row="3" Background="#3498DB" Margin="5,0,0,0" Height="19" VerticalAlignment="Top" BorderBrush="BlanchedAlmond">
                <!-- Content for the fourth sub-column -->
                <TextBlock x:Name="RxTextBlock" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Second Column (80*), Sub-rows with sizes: 10*, 15*, Auto -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="84*"/>
            </Grid.RowDefinitions>

            <!-- Add your controls in the sub-rows of the second column here -->
            <!-- Example: -->
            <Border Grid.Row="0" Background="#3498DB" Margin="5">
                <!-- Content for the first sub-row -->
                <TextBlock x:Name="RxVisitTextBlock" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Border>

            <Border Grid.Row="1" Background="#2ECC71" Margin="5">
                <!-- Content for the second sub-row -->
                <TextBlock x:Name="PastVisitTextBlock" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Border>

            <Grid Grid.Row="2" Margin="5,15,5,24">
                <ListBox x:Name="PrescriptionList" Grid.Row="2" Margin="10" SelectionChanged="PrescriptionList_SelectionChanged" HorizontalContentAlignment="Stretch" SelectedItem="{Binding Patients}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Margin="5" Background="White" HorizontalAlignment="Stretch">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- First Row: Date, Show Prescription, Print, Delete Buttons -->
                                    <Grid Grid.Row="0" HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Date -->


                                        <TextBlock Grid.Column="0" Margin="10,5" VerticalAlignment="Center">
<Run Text="Date: "/>
<Run Text="{Binding Visit}"/>
                                        </TextBlock>


                                        <!-- Show Prescription Button -->
                                        <Button Grid.Column="1" Content="Show Prescription" Margin="50,10,50,10" Background="#3498DB" Foreground="White" Click="ShowPrescription_Click"/>

                                        <!-- Print Button -->
                                        <Button Grid.Column="2" Content="Print" Margin="10,5" Background="#2ECC71" Foreground="White" Click="Print_Click"/>

                                        <!-- Delete Button -->
                                        <Button Grid.Column="3" x:Name="DeleteButton" Content="Delete" Margin="10,5" Background="#FF3C5A7D" FontWeight="Bold" Foreground="White" Click="Delete_Click"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
    