<UserControl x:Class="SmartClinic.View.UserControls.History"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UserControls="clr-namespace:SmartClinic.View.UserControls"
             xmlns:local="clr-namespace:SmartClinic.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="chiefComplaintButton" Content="Chief Complaint +" Margin="10,25,0,0" Background="{x:Null}" FontSize="14" FontWeight="Bold" BorderBrush="{x:Null}" Click="ChiefComplaintButton_Click"/>
            </StackPanel>
            <ListBox x:Name="chiefComplaintList" Margin="10,5,0,0" BorderBrush="{x:Null}" BorderThickness="0" MaxHeight="200" ItemsSource="{Binding ChiefComplaints}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" MinWidth="180" Margin="0,-4,0,-5">
                            <Ellipse Width="5" Height="5" Fill="Black" VerticalAlignment="Center" Margin="2" />
                            <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="5" Width="150" TextTrimming="CharacterEllipsis" FontWeight="Bold"/>
                            <Button Content="x" Foreground="Red" Background="{x:Null}" HorizontalAlignment="Right" FontSize="14" FontWeight="Bold" BorderBrush="{x:Null}" Click="RemoveChiefComplaint_Click" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>


            <StackPanel Orientation="Horizontal">

                <Button Content="History +" Margin="10,25,0,0" Background="{x:Null}" FontSize="14" FontWeight="Bold" BorderBrush="{x:Null}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">

                <Button Content="On Examinations +" Margin="10,25,0,0" Background="{x:Null}" FontSize="14" FontWeight="Bold" BorderBrush="{x:Null}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <!--<Label Content="Investigation" FontWeight="Bold" FontSize="14" Margin="10,25,0,0"/>-->
                <Button Content="Investigation +" Margin="10,25,0,0" Background="{x:Null}" FontSize="14" FontWeight="Bold" BorderBrush="{x:Null}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <!--<Label Content="Diagonosis" FontWeight="Bold" FontSize="14" Margin="10,25,0,0"/>-->
                <Button Content="Diagonosis +" Margin="10,25,0,0" Background="{x:Null}" FontSize="14" FontWeight="Bold" BorderBrush="{x:Null}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <!--<Label Content="Treatment Plan" FontWeight="Bold" FontSize="14" Margin="10,25,0,0"/>-->
                <Button Content="Treatment Plan +" Margin="10,25,0,0" Background="{x:Null}" FontSize="14" FontWeight="Bold" BorderBrush="{x:Null}" Click="TreatmentPlanButton_Click"/>
            </StackPanel>

        </StackPanel>
        <Popup Name="chiefComplaintPopup" PlacementTarget="{Binding ElementName=chiefComplaintButton}" Placement="Bottom">
            <Grid Background="Transparent">
                <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Enter Chief Complaint:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBox x:Name="chiefComplaintTextBox" Width="200" Height="25" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="OK" Margin="0,0,10,0" Width="75" Height="25" Click="ChiefComplaintOkButton_Click"/>
                            <Button Content="Cancel" Width="75" Height="25" Click="ChiefComplaintCancel_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Popup>
        <Popup Name="treatmentPlanPopup" PlacementTarget="{Binding ElementName=treatmentPlanButton}" Placement="Left" StaysOpen="False">
            <UserControls:TreatmentPlanPopup/>
        </Popup>


    </Grid>
</UserControl>
