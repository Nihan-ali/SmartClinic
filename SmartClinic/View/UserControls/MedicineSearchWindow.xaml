<!-- MedicineSearchWindow.xaml -->
<Window x:Class="SmartClinic.MedicineSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medicine Search" Height="400" Width="600">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <ComboBox x:Name="searchComboBox" Width="150" SelectedIndex="0">
                <ComboBoxItem Content="Brand Name"/>
                <ComboBoxItem Content="Generic Name"/>
            </ComboBox>





            <TextBox x:Name="searchTextBox" Width="200" Margin="10" VerticalAlignment="Center" TextChanged="SearchTextBox_TextChanged" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Medicines" FontWeight="Bold" Margin="10"/>
            <TextBlock Text="Medicine Group" FontWeight="Bold" Margin="10"/>
        </StackPanel>

        <ListView x:Name="medicineListView" Grid.Row="2" Margin="10">
            <!-- Add necessary columns to display medicine information -->
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Brand Name" DisplayMemberBinding="{Binding BrandName}"/>
                    <GridViewColumn Header="Generic Name" DisplayMemberBinding="{Binding GenericName}"/>
                    <!-- Add more columns as needed -->
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
