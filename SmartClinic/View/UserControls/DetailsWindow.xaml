<Window x:Class="SmartClinic.View.UserControls.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartClinic.View.UserControls"
        mc:Ignorable="d"
        Title="DetailsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="detailsTextBlock" FontWeight="Bold" FontSize="16" Foreground="#DA2D2727" Margin="0,0,0,10"/>
            <TextBox x:Name="detailsTextBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="100" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="OK" Width="100" Click="DetailsOkButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
