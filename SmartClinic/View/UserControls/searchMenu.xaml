<UserControl x:Class="SmartClinic.View.UserControls.searchMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartClinic.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Fill="AliceBlue"/>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button x:Name="prescription1" Content="New Prescription" Margin="0,0,10,0" BorderBrush="{x:Null}" Foreground="#FF1A1840" FontWeight="Bold" Background="{x:Null}"/>
            <!-- Add margin to create space between buttons -->
            <Button Content="Print Preview" Margin="0,0,10,0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF5556C1" FontSize="10" FontWeight="Bold"/>
            <TextBox Text="search here" Height="25" Background="#FFCADAE4" Width="96" Opacity="0.5" SelectionOpacity="-6" SelectionBrush="#FF7E94A5"/>
        </StackPanel>

    </Grid>
</UserControl>
