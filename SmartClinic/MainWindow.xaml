<Window x:Class="SmartClinic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartClinic"
        xmlns:UserControls="clr-namespace:SmartClinic.View.UserControls"
        mc:Ignorable="d"
        Title="Doctor Rx"
        WindowState="Maximized"
        Icon="doctor.ico" 
        MouseDown="MainWindow_MouseDown"
        Height="{x:Static SystemParameters.PrimaryScreenHeight}" 
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"
        >
    <!--<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible">-->
        <Grid>
            
            
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="94*"/>
            </Grid.RowDefinitions>
            <UserControls:header/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="96*"/>
                </Grid.ColumnDefinitions>
                <UserControls:MenuBar/>
                <Grid Grid.Column="1">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="searching" Height="4*"/>
                        <RowDefinition Height="96*"/>
                    </Grid.RowDefinitions>
                    <Grid >
                        <UserControls:searchMenu/>
                    </Grid>
                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid Grid.Row="1" Background="AliceBlue" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="name" Height="7*"/>
                            <RowDefinition x:Name="patient" Height="4*"/>
                            <RowDefinition Height="80*"/>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="5*"/>
                        </Grid.RowDefinitions>
                        <UserControls:title/>

                        <Grid Grid.Row="1">

                            <UserControls:patientInfo/>
                        </Grid>
                        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="0,1,0,0"/>
                        <Grid x:Name="prescription" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="80*"/>
                            </Grid.ColumnDefinitions>
                            <UserControls:History/>

                            <Grid Grid.Column="1">
                                <UserControls:medicine/>
                            </Grid>
                            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1,0,0,0"/>
                        </Grid>
                        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="0,1,0,0"/>
                        <Grid x:Name="save" Grid.Row="3" Height="25">
                            <UserControls:savePrint/>
                        </Grid>
                        <Grid x:Name="fotter" Grid.Row="4">
                            <UserControls:Footer/>

                        </Grid>
                    </Grid>
                    </ScrollViewer>

                </Grid>

            </Grid>
        </Grid>

    <!--</ScrollViewer>-->
</Window>
    
